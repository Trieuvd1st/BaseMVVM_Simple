<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@+id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.joysoftgo.base_mvvm.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.joysoftgo.base_mvvm.ui.dashboard.DashboardFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_photoFragment"
            app:destination="@id/photoFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_videoFragment"
            app:destination="@id/videoFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_fileFragment"
            app:destination="@id/fileFragment" />
    </fragment>

    <fragment
        android:id="@+id/photoFragment"
        android:name="com.joysoftgo.base_mvvm.ui.tabimage.PhotoFragment"
        android:label="PhotoFragment"
        tools:layout="@layout/fragment_photo" />

    <fragment
        android:id="@+id/videoFragment"
        android:name="com.joysoftgo.base_mvvm.ui.tabVideo.VideoFragment"
        android:label="VideoFragment"
        tools:layout="@layout/fragment_video" />

    <fragment
        android:id="@+id/fileFragment"
        android:name="com.joysoftgo.base_mvvm.ui.tabfile.FileFragment"
        android:label="FileFragment"
        tools:layout="@layout/fragment_file" />

</navigation>